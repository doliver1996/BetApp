<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="378dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/banderad"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/numapuestas"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/banderad"
        android:layout_toRightOf="@+id/banderad"
        android:width="80dp"
        android:hint="Valor de apuesta"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/banderad2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/visita"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/banderad2"
        android:layout_toStartOf="@+id/banderad2"
        android:width="80dp"
        android:hint="Valor de apuesta"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/betcasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banderad"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/banderad"
        android:layout_toRightOf="@+id/banderad"
        android:text="APOSTAR"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/betvisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banderad2"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/banderad2"
        android:layout_toStartOf="@+id/banderad2"
        android:text="APOSTAR"
        android:textColor="@color/colorAccent"
        android:textSize="12dp" />
</RelativeLayout>